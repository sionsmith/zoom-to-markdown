# Zoom API Credentials
# Get these from: https://marketplace.zoom.us/develop/create
# Create a Server-to-Server OAuth app
ZOOM_ACCOUNT_ID=your_account_id_here
ZOOM_CLIENT_ID=your_client_id_here
ZOOM_CLIENT_SECRET=your_client_secret_here

# Optional: Specific user ID to fetch recordings from
# Default: "me" (the user who owns the OAuth app)
ZOOM_USER_ID=me

# Output directory for meeting notes
OUTPUT_DIR=meeting-notes

# Polling interval in minutes (for reference, not used in GitHub Actions)
POLL_INTERVAL_MINUTES=15

# Enable action item extraction (true/false)
ENABLE_ACTION_ITEMS=true

# Enable LLM processing for better action items (requires additional API key)
ENABLE_LLM=false

# Maximum recordings to process per run
MAX_RECORDINGS_PER_RUN=100
